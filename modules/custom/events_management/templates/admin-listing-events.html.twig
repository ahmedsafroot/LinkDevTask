<section class="events">
  <a href="{{ url('events_management.admin_add_new_event') }}" class="btn btn-outline-success">
    {{ 'Add New Event'|t }}
  </a>
  <div class="container">
    <div class="table-responsive">
      <table class="table table-striped table-bordered">
        <thead>
        <tr>
          <th>{{ 'ID'|t }}</th>
          <th>{{ 'Title'|t }}</th>
          <th>{{ 'Category'|t }}</th>
          <th>{{ 'Start Date'|t }}</th>
          <th>{{ 'End Date'|t }}</th>
          <th>{{ 'Actions'|t }}</th>

        </tr>
        </thead>
        <tbody>
        {% for event in events %}
          <tr>
            <td>{{ event.id }}</td>
            <td>{{ event.title }}</td>
            <td>{{ categories[event.category]  }}</td>
            <td>{{ event.start_date|date('d-m-Y') }}</td>
            <td>{{ event.end_date|date('d-m-Y') }}</td>
            <td>
              <a href="{{ url('events_management.admin_view_event',{id: event.id}) }}" class="btn btn-outline-success">
                {{ 'View'|t }}
              </a>
              /
              <a href="{{ url('events_management.edit_event',{id: event.id}) }}" class="btn btn-outline-success">
                {{ 'Edit'|t }}
              </a>
              /
              <a href="{{ url('events_management.delete_event',{id: event.id}) }}" class="btn btn-outline-danger" onclick="return confirm('Are you sure you want to delete this event?');">
                {{ 'Delete'|t }}
              </a>
            </td>
          </tr>
        {% endfor %}
        </tbody>
      </table>

    </div>
  </div>
  {{ pager }}
</section>
