<section class="events">
  <div class="container">
    <div class="table-responsive">
      <table class="table table-striped table-bordered">
        <thead>
        <tr>
          <th>{{ 'ID'|t }}</th>
          <th>{{ 'Title'|t }}</th>
          <th>{{ 'Category'|t }}</th>
          <th>{{ 'Start Date'|t }}</th>
          <th>{{ 'End Date'|t }}</th>
          <th>{{ 'Details'|t }}</th>

        </tr>
        </thead>
        <tbody>
        {% for event in events %}
          <tr>
            <td>{{ event.id }}</td>
            <td>{{ event.title }}</td>
            <td>{{ categories[event.category]  }}</td>
            <td>{{ event.start_date|date('d-m-Y') }}</td>
            <td>{{ event.end_date|date('d-m-Y') }}</td>
            <td>
              <a href="{{ url('events_management.view_event',{id: event.id}) }}" class="btn btn-outline-success">
                {{ 'Details'|t }}
              </a>
            </td>
          </tr>
        {% endfor %}
        </tbody>
      </table>

    </div>
  </div>
  {{ pager }}
</section>
